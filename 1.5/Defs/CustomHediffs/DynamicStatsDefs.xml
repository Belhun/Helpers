<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>InstantSpeedBoost</defName>
    <label>instant speed boost</label>
    <description>A hediff that provides an immediate boost to movement speed.</description>
    <isBad>false</isBad>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <statOffsets>
          <MoveSpeed>0.5</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>


  <HediffDef>
    <defName>LeaderHediff</defName>
    <label>Leader</label>
    <description>A boost provided to the leader when assisted.</description>
    <isBad>false</isBad>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <statOffsets>
          <WorkSpeedGlobal>0</WorkSpeedGlobal>
          <MedicalTendSpeed>0</MedicalTendSpeed>
          <MedicalTendQuality>0</MedicalTendQuality>
          <MedicalSurgerySuccessChance>0</MedicalSurgerySuccessChance>
          <GeneralLaborSpeed>0</GeneralLaborSpeed>
          <CookSpeed>0</CookSpeed>
          <FoodPoisonChance>0</FoodPoisonChance>
          <MiningSpeed>0</MiningSpeed>
          <MiningYield>0</MiningYield>
          <PlantWorkSpeed>0</PlantWorkSpeed>
          <PlantHarvestYield>0</PlantHarvestYield>
          <ConstructionSpeed>0</ConstructionSpeed>
          <ConstructSuccessChance>0</ConstructSuccessChance>
          <MoveSpeed>20</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>


  <HediffDef>
    <defName>AssistantHediff</defName>
    <label>Assistant</label>
    <description>A boost provided to the assistant when helping.</description>
    <isBad>false</isBad>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="Helpers.AssistantHediffCompProperties">
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <WorkSpeedGlobal>0</WorkSpeedGlobal>
          <MedicalTendSpeed>0</MedicalTendSpeed>
          <MedicalTendQuality>0</MedicalTendQuality>
          <MedicalSurgerySuccessChance>0</MedicalSurgerySuccessChance>
          <GeneralLaborSpeed>0</GeneralLaborSpeed>
          <CookSpeed>0</CookSpeed>
          <FoodPoisonChance>0</FoodPoisonChance>
          <MiningSpeed>0</MiningSpeed>
          <MiningYield>0</MiningYield>
          <PlantWorkSpeed>0</PlantWorkSpeed>
          <PlantHarvestYield>0</PlantHarvestYield>
          <ConstructionSpeed>0</ConstructionSpeed>
          <ConstructSuccessChance>0</ConstructSuccessChance>
          <MoveSpeed>30</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>
